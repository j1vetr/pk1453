# Production Environment Variables
# Copy this file to .env on your server and fill in the values

# Node Environment
NODE_ENV=production
PORT=5000

# Database - PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/posta_kodlari
PGHOST=localhost
PGPORT=5432
PGDATABASE=posta_kodlari
PGUSER=your_db_user
PGPASSWORD=your_secure_password

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_very_long_random_secret_key_here

# Domain
DOMAIN=postakodrehberi.com

# Optional: Google Analytics & Search Console
GOOGLE_ANALYTICS_CODE=
GOOGLE_SEARCH_CONSOLE_VERIFICATION=
